<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LivestockManagementSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LivestockManagementSystem"
    xmlns:Views="clr-namespace:LivestockManagementSystem.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="LivestockManagementSystem">

    <TabBar>
        <Tab Title="Dashboard" Shell.NavBarIsVisible="False">
            <ShellContent ContentTemplate="{DataTemplate Views:DashboardView}"/>
        </Tab>
        <Tab Title="Management" Shell.NavBarIsVisible="False">
            <ShellContent ContentTemplate="{DataTemplate Views:ManagementView}"/>
        </Tab>
        <Tab Title="Finance" Shell.NavBarIsVisible="False">
            <ShellContent ContentTemplate="{DataTemplate Views:FinanceView}"/>
        </Tab>

    </TabBar>

</Shell>
